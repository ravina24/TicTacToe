<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ravina.tictactoe.TicTacToeActivity">

    <GridLayout
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="14dp"
        android:rowCount="3">

        <ImageView
            android:id="@+id/sOne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:cropToPadding="true"
            android:padding="3dp"
            android:onClick="makeMove"
             />

        <ImageView
            android:id="@+id/sTwo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sThree"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sFour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sFive"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sSix"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sSeven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sEight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

        <ImageView
            android:id="@+id/sNine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:cropToPadding="true"
            android:onClick="makeMove"/>

    </GridLayout>

    <Button
        android:id="@+id/buttonRematch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/board"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:onClick="rematch"
        android:text="REMATCH"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textPlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonRematch"
        android:text="Player 1:" />

    <TextView
        android:id="@+id/textPlayerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonRematch"
        android:text="Player 2:" />

    <TextView
        android:id="@+id/scoreOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textPlayerOne"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textPlayerOne"
        android:layout_toRightOf="@+id/textPlayerOne"
        android:text="0" />

    <TextView
        android:id="@+id/scoreTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textPlayerTwo"
        android:layout_alignBottom="@+id/textPlayerTwo"
        android:layout_alignLeft="@+id/scoreOne"
        android:layout_alignStart="@+id/scoreOne"
        android:text="0" />


</RelativeLayout>
